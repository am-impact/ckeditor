{
  "name": "@craftcms/ckeditor",
  "private": true,
  "main": "webpack.config.js",
  "browserslist": [
    "extends @craftcms/browserslist-config"
  ],
  "devDependencies": {
    "@craftcms/sass": "^1.1.0",
    "@craftcms/webpack": "^1.1.2",
    "ckeditor5": ">=37.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.0",
    "prettier": "^2.7.1"
  },
  "scripts": {
    "prebuild": "npm run fix-prettier && npm run dll:build --prefix ./packages/ckeditor5-craftcms",
    "build": "webpack --node-env=production --progress",
    "dev": "webpack --node-env=dev --mode=development --progress",
    "serve": "webpack-dev-server --node-env=development",
    "check-prettier": "prettier --check .",
    "fix-prettier": "prettier --write .",
    "prepare": "husky install"
  }
}
